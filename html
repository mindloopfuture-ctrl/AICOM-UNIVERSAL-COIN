  <script>
    const langSwitch = document.getElementById('lang-switch');
    const esElems = document.querySelectorAll('#title-es, #subtitle-es, #status-title-es, #how-es, #multi-es, #multi-text-es');
    const enElems = document.querySelectorAll('#title-en, #subtitle-en, #status-title-en, #how-en, #multi-en, #multi-text-en');

    let current = 'es';
    langSwitch.addEventListener('click', () => {
      if (current === 'es') {
        esElems.forEach(e => e.classList.add('hidden'));
        enElems.forEach(e => e.classList.remove('hidden'));
        langSwitch.textContent = 'ES';
        current = 'en';
      } else {
        enElems.forEach(e => e.classList.add('hidden'));
        esElems.forEach(e => e.classList.remove('hidden'));
        langSwitch.textContent = 'EN';
        current = 'es';
      }
    });

    // Conectar wallet (Metamask/compatible)
    document.getElementById('connect-btn').onclick = async () => {
      if (window.ethereum) {
        try {
          await window.ethereum.request({ method: 'eth_requestAccounts' });
          alert('‚úÖ Wallet conectada');
        } catch (e) {
          alert('‚ùå No se pudo conectar la wallet: ' + e.message);
        }
      } else {
        alert('Instala Metamask para conectar.');
      }
    };
  </script>
